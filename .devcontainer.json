{
  "customizations": {
    "vscode": {
      "extensions": [
        "mkhl.direnv"
      ]
    }
  },
  "capAdd": ["SYS_PTRACE", "PERFMON"],

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--cap-add=PERFMON",
    "--security-opt",
    "seccomp=unconfined",
    "--privileged"
  ],
  "image": "ghcr.io/cachix/devenv:latest",
  "overrideCommand": false,
  "updateContentCommand": "devenv test"
}
